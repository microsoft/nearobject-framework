{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 16
    },
    "configurePresets": [
        {
            "name": "os-windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "os-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "resolve-deps-fetchcontent",
            "hidden": true,
            "displayName": "Resolve dependencies with FetchContent",
            "description": "configures project to resolve dependencies with FetchContent",
            "cacheVariables": {
                "NOF_DEPENDENCY_RESOLUTION_METHOD": "FetchContent"
            }
        },
        {
            "name": "resolve-deps-vcpkg",
            "hidden": true,
            "displayName": "Resolve dependencies with vcpkg",
            "description": "configures project to resolve dependencies with vcpkg",
            "cacheVariables": {
                "NOF_DEPENDENCY_RESOLUTION_METHOD": "vcpkg"
            }
        },
        {
            "name": "dev-base",
            "hidden": true,
            "displayName": "Development (base)",
            "description": "Base options for all development presets",
            "cacheVariables": {
                "NOF_BUILD_ENVIRONMENT": "development",
                "NOF_VCPKG_TARGET": "development"
            }
        },
        {
            "name": "vcpkg-base",
            "hidden": true,
            "displayName": "vcpkg (base)",
            "description": "Base options for all vcpkg presets",
            "inherits":[
                "resolve-deps-vcpkg"
            ],
            "cacheVariables": {
                "NOF_BUILD_ENVIRONMENT": "vcpkg"
            }
        },
        {
            "name": "dev",
            "displayName": "Development (with FetchContent)",
            "description": "Development build for inner-loop with FetchContent",
            "inherits": [
                "dev-base",
                "resolve-deps-fetchcontent"
            ]
        },
        {
            "name": "dev-vcpkg",
            "displayName": "Development (with vcpkg)",
            "description": "Development build for inner-loop with vcpkg",
            "inherits": [
                "dev-base",
                "resolve-deps-vcpkg"
            ]
        },
        {
            "name": "dev-driver",
            "displayName": "Development (driver)",
            "description": "Development for the simulator driver",
            "inherits": [
                "os-windows",
                "dev"
            ],
            "generator": "Visual Studio 17 2022",
            "architecture":{
                "strategy": "set",
                "value": "x64"
            },
            "toolset":{
                "strategy": "set",
                "value": "host=x64"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "C:/Program Files/Microsoft Visual Studio/2022/Enterprise/VC/Tools/MSVC/14.34.31933/bin/Hostx64/x64/cl.exe"
            }
        },
        {
            "name": "vcpkg-dev",
            "displayName": "vcpkg (development)",
            "description": "vcpkg-based build with development (latest) sources",
            "inherits": [
                "vcpkg-base"
            ],
            "cacheVariables": {
                "NOF_VCPKG_TARGET": "development"
            }
        },
        {
            "name": "vcpkg-release",
            "displayName": "vcpkg (release)",
            "description": "vcpkg-based build with release (stable) sources",
            "inherits": [
                "vcpkg-base"
            ],
            "cacheVariables": {
                "NOF_VCPKG_TARGET": "release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "configurePreset": "dev",
            "configuration": "Debug"
        },
        {
            "name": "vcpkg",
            "configurePreset": "vcpkg-dev",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configurePreset": "vcpkg-release",
            "configuration": "Release"
        },
        {
            "name": "driver",
            "configurePreset": "dev-driver"
        }
    ],
    "testPresets": [
        {
            "name": "dev",
            "configurePreset": "dev"
        }
    ]
}
